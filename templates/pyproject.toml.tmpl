[project]
name = "{{.ProjectName}}"
version = "0.1.0"
description = "Static site for {{.ProjectName}}"
readme = "README.md"
requires-python = ">={{ .PythonVersion | default "3.9" }}"
dependencies = [
    # Add your build dependencies here
    # Examples:
    # "jinja2>=3.0.0",
    # "markdown>=3.0.0",
    # "pyyaml>=6.0.0",
    # "requests>=2.28.0",
]

[project.optional-dependencies]
dev = [
    "pytest>=7.0.0",
    "black>=22.0.0",
    "isort>=5.0.0",
    "flake8>=4.0.0",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.uv]
dev-dependencies = [
    "pytest>=7.0.0",
    "black>=22.0.0",
    "isort>=5.0.0",
    "flake8>=4.0.0",
]

[tool.black]
line-length = 88
target-version = ['py39']

[tool.isort]
profile = "black"
line_length = 88

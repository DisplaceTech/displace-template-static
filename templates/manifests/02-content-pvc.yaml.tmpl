apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{.ProjectName}}-content
  namespace: {{.Namespace}}
  labels:
    app.kubernetes.io/name: {{.ProjectName}}
    app.kubernetes.io/instance: {{.ProjectName}}
    app.kubernetes.io/component: storage
    app.kubernetes.io/managed-by: displace
  annotations:
    description: "Persistent storage for static site content"
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: {{ .StorageSize | default "1Gi" }}
  storageClassName: {{ .StorageClass | default "standard" }}

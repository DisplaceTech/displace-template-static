apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{.ProjectName}}
  namespace: {{.Namespace}}
  labels:
    app.kubernetes.io/name: {{.ProjectName}}
    app.kubernetes.io/instance: {{.ProjectName}}
    app.kubernetes.io/component: app
    app.kubernetes.io/managed-by: displace
  annotations:
    # Cert-manager for SSL certificates
    cert-manager.io/cluster-issuer: {{ .CertIssuer | default "letsencrypt-prod" }}
    # Nginx ingress specific annotations
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
    nginx.ingress.kubernetes.io/force-ssl-redirect: "true"
spec:
  ingressClassName: {{ .IngressClass | default "nginx" }}
  tls:
  - hosts:
    - {{.Domain}}
    secretName: {{.ProjectName}}-tls
  rules:
  - host: {{.Domain}}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: {{.ProjectName}}
            port:
              number: 80

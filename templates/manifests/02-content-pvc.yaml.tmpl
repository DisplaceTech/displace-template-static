apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{.ProjectName}}-content
  namespace: {{.Namespace}}
  labels:
    app: {{.ProjectName}}
    component: storage
    displace.tech/project: {{.ProjectName}}
    displace.tech/template: static
  annotations:
    description: "Persistent storage for static site content"
    displace.tech/content-type: "static-files"
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: {{ .StorageSize | default "1Gi" }}
  storageClassName: {{ .StorageClass | default "standard" }}
